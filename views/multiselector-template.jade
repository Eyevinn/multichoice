script(id="multiselector-template" type="text/template")
  div
    dl.dropdown
      dt
        label#title Select Channels
      ul#selection-list
        <% _.each(channels, function(channel) { %>
        li 
          label 
            <%= "<input type='checkbox' value='" + channel.url + "'" + (channel.checked?'checked':'') + ">" %>
            b <%= channel.name %>
        <% }); %>
    button.submit-button Submit
